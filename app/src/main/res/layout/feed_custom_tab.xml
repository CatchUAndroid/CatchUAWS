<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgFeedPublic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/world_icon_96" />

        <TextView
            android:id="@+id/txtFeedTypePublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto"
            android:text="@string/feedTypePublic"
            android:textColor="@color/black"
            android:textSize="17sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFeedCatched"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_catch" />

        <TextView
            android:id="@+id/txtFeedTypeCatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto"
            android:text="@string/feedTypeCatched"
            android:textColor="@color/black"
            android:textSize="17sp"
            />

    </LinearLayout>

</LinearLayout>
