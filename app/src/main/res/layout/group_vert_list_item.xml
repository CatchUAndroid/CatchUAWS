<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="3dp"
    android:id="@+id/groupRootCardView">

    <LinearLayout
        android:id="@+id/specialListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/groupPicImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/img_border_blue"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/groupnameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center">

            <Button
                android:id="@+id/statuDisplayBtn"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ripple_button_admin"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:textStyle="normal|bold|italic" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>