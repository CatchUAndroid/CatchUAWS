<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pulsator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/first_page">

    <com.uren.catchu._Libraries.PulseView.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pulse_color="@color/colorPrimary"
        app:pulse_count="8"
        app:pulse_duration="5000"
        app:pulse_interpolator="Decelerate"
        app:pulse_repeat="0"
        app:pulse_startFromScratch="true">


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:id="@+id/rl_profile_image">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="1dp" />

            <TextView
                android:id="@+id/txtProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_profile_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:paddingTop="50dp"
            android:text="@string/checkingAround"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </com.uren.catchu._Libraries.PulseView.PulsatorLayout>


</RelativeLayout>
