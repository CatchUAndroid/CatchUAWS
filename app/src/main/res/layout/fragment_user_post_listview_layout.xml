<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/specialSelectRelLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/posts_show_mode_layout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shareNormViewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shareListViewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

        <include layout="@layout/warning_message_tv"></include>

        <include layout="@layout/layout_progress_bar" />

    </LinearLayout>

</RelativeLayout>