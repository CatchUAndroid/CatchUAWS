<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentRelLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/specialRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Black">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/photoMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/photoRelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_try_bg">
            </FrameLayout>

            <ImageView
                android:id="@+id/selectImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/textView"
                android:visibility="gone"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addPropRelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancelImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/addTextImgv"
                android:layout_marginStart="15dp"
                android:background="@drawable/img_border_white"
                android:src="@drawable/cancel_gray" />

            <ImageView
                android:id="@+id/addTextImgv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/aa_icon" />

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="182dp"
                android:layout_alignStart="@+id/cancelImageView"
                android:layout_centerVertical="true">

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:progressTint="@color/White"
                    android:rotation="270"
                    android:thumbTint="@color/White"
                    android:thumbTintMode="src_in"
                    android:visibility="gone" />

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>